<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MMQ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Results" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/res_shape</item>

    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen_night</item>
        <item name="android:navigationBarColor">@color/background_night</item>
        <item name="android:statusBarColor">@color/background_night</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>


    </style>
</resources>